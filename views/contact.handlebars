<section class="contact-shell">
  <div class="contact-window">
    <div class="contact-grid">
      <!-- LEFT: headline -->
      <div class="contact-left">
        <p class="contact-eyebrow">Let’s talk</p>
        <h1 class="contact-title">LET’S<br/>GET IN<br/>TOUCH</h1>
        <p class="contact-desc">
          Whether you have a question, feedback, or just want to say hello —
          I’d love to hear from you.
        </p>

      </div>

      <!-- RIGHT: form -->
      <div class="contact-right">
        <form class="contact-form">
          <div class="row2">
            <label>
              <span>First Name</span>
              <input type="text" name="firstName" placeholder="Yashika" />
            </label>

            <label>
              <span>Last Name</span>
              <input type="text" name="lastName" placeholder="Lanjewar" />
            </label>
          </div>

          <label>
            <span>Email</span>
            <input type="email" name="email" placeholder="name@email.com" />
          </label>

          <label>
            <span>Message</span>
            <textarea name="message" rows="5" placeholder="Write your message..."></textarea>
          </label>

          <button class="contact-btn" type="submit">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>
